/*Buatlah program untuk menghitung harga total suatu barang yang sudah mendapat diskon 15%,
dimana jumlah barangnya dan harga perunit akan diinput oleh pengguna. Jumlah harga akan
ditampilkan sebagai output*/

import java.util.Scanner;

class Main {
  public static void main(String[] args) {
    Scanner myObj = new Scanner(System.in);

    System.out.println("Masukkan harga barang dan jumlah barang : ");

		int harga = myObj.nextInt();
    System.out.println("Harga barang : " + harga);
		int jumlah = myObj.nextInt();
    System.out.println("Jumlah unit  : " + jumlah);
		
		int diskon = (harga * jumlah) * 85/100;
    System.out.println("Harga setelah diskon : " + diskon);
  }
}
